<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .cart-page {
            padding: 2rem 0;
            margin-top: 80px;
            min-height: 70vh;
        }
        
        .cart-header {
            text-align: center;
            margin-bottom: 3rem;
        }
        
        .cart-content {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 3rem;
        }
        
        .cart-items {
            background: var(--bg-secondary);
            border-radius: 1rem;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .cart-item {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            padding: 1.5rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item.unavailable {
            opacity: 0.6;
        }

        .cart-item-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 0.5rem;
        }

        .cart-item-info {
            flex: 1;
        }

        .cart-item-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .cart-item-brand {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .cart-item-price {
            color: var(--accent-primary);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--bg-tertiary);
            border-radius: 0.5rem;
            padding: 0.5rem;
        }

        .quantity-btn {
            background: var(--accent-primary);
            color: var(--bg-primary);
            border: none;
            width: 30px;
            height: 30px;
            border-radius: 0.25rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-input {
            width: 60px;
            text-align: center;
            background: transparent;
            border: none;
            color: var(--text-primary);
            font-weight: 600;
        }

        .remove-btn {
            background: var(--error);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .remove-btn:hover {
            background: #dc2626;
        }

        .cart-summary {
            background: var(--bg-secondary);
            border-radius: 1rem;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            height: fit-content;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .summary-row:last-child {
            border-bottom: none;
            font-weight: 600;
            font-size: 1.2rem;
            color: var(--accent-primary);
        }

        .empty-cart {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

        .empty-cart i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: var(--text-muted);
        }

        .unavailable-notice {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
            padding: 0.75rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        /* Button Styles */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.5rem;
            font-weight: 600;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .btn-primary {
            background: var(--accent-primary);
            color: var(--bg-primary);
        }

        .btn-primary:hover {
            background: var(--accent-secondary);
            transform: translateY(-2px);
        }

        .btn-outline {
            background: transparent;
            color: var(--accent-primary);
            border: 2px solid var(--accent-primary);
        }

        .btn-outline:hover {
            background: var(--accent-primary);
            color: var(--bg-primary);
        }

        .btn-disabled {
            background: var(--text-muted);
            color: var(--bg-secondary);
            cursor: not-allowed;
        }

        .btn-disabled:hover {
            transform: none;
        }

        @media (max-width: 768px) {
            .cart-content {
                grid-template-columns: 1fr;
            }
            
            .cart-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <section class="cart-page">
        <div class="container">
            <div class="cart-header">
                <h1>Shopping Cart</h1>
                <p>Review your items before checkout</p>
            </div>

            <% if (cartItems && cartItems.length > 0) { %>
                <div class="cart-content">
                    <div class="cart-items">
                        <h2>Cart Items (<%= cartCount %>)</h2>
                        
                        <% const unavailableItems = cartItems.filter(item => !item.isAvailable); %>
                        <% if (unavailableItems.length > 0) { %>
                            <div class="unavailable-notice">
                                <i class="fas fa-exclamation-triangle"></i>
                                Some items in your cart are no longer available and cannot be purchased.
                            </div>
                        <% } %>

                        <% cartItems.forEach(item => { %>
                            <div class="cart-item <%= !item.isAvailable ? 'unavailable' : '' %>" data-product-id="<%= item.productId %>">
                                <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="cart-item-image">
                                
                                <div class="cart-item-info">
                                    <div class="cart-item-name"><%= item.product.name %></div>
                                    <div class="cart-item-brand"><%= item.product.brand %></div>
                                    <div class="cart-item-price">$<%= item.product.price %></div>
                                    <% if (!item.isAvailable) { %>
                                        <div style="color: var(--error); font-size: 0.9rem; margin-top: 0.5rem;">
                                            <i class="fas fa-exclamation-circle"></i> Currently unavailable
                                        </div>
                                    <% } %>
                                </div>

                                <div class="quantity-controls">
                                    <button class="quantity-btn" onclick="updateQuantity(<%= item.productId %>, <%= item.quantity - 1 %>)" <%= !item.isAvailable ? 'disabled' : '' %>>
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="number" class="quantity-input" value="<%= item.quantity %>" 
                                           onchange="updateQuantity(<%= item.productId %>, this.value)"
                                           min="1" max="<%= item.product.stock %>" <%= !item.isAvailable ? 'disabled' : '' %>>
                                    <button class="quantity-btn" onclick="updateQuantity(<%= item.productId %>, <%= item.quantity + 1 %>)" <%= !item.isAvailable ? 'disabled' : '' %>>
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>

                                <div style="text-align: right;">
                                    <div style="font-weight: 600; color: var(--accent-primary); margin-bottom: 0.5rem;">
                                        $<%= item.subtotal.toFixed(2) %>
                                    </div>
                                    <button class="remove-btn" onclick="removeItem(<%= item.productId %>)">
                                        <i class="fas fa-trash"></i> Remove
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <div class="cart-summary">
                        <h3>Order Summary</h3>
                        
                        <div class="summary-row">
                            <span>Subtotal (<%= cartCount %> items)</span>
                            <span>$<%= cartTotal.toFixed(2) %></span>
                        </div>
                        
                        <div class="summary-row">
                            <span>Shipping</span>
                            <span><%= cartTotal > 500 ? 'Free' : '$10.00' %></span>
                        </div>
                        
                        <div class="summary-row">
                            <span>Tax (10%)</span>
                            <span>$<%= (cartTotal * 0.1).toFixed(2) %></span>
                        </div>
                        
                        <div class="summary-row">
                            <span>Total</span>
                            <span>$<%= (cartTotal + (cartTotal > 500 ? 0 : 10) + (cartTotal * 0.1)).toFixed(2) %></span>
                        </div>

                        <% if (user) { %>
                            <% const availableItems = cartItems.filter(item => item.isAvailable); %>
                            <% if (availableItems.length > 0) { %>
                                <a href="/checkout" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                                    <i class="fas fa-credit-card"></i> Proceed to Checkout
                                </a>
                            <% } else { %>
                                <button class="btn btn-disabled" style="width: 100%; margin-top: 1rem;" disabled>
                                    <i class="fas fa-exclamation-triangle"></i> No Available Items
                                </button>
                            <% } %>
                        <% } else { %>
                            <a href="/login" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                                <i class="fas fa-sign-in-alt"></i> Login to Checkout
                            </a>
                        <% } %>

                        <a href="/products" class="btn btn-outline" style="width: 100%; margin-top: 0.5rem;">
                            <i class="fas fa-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            <% } else { %>
                <div class="empty-cart">
                    <i class="fas fa-shopping-cart"></i>
                    <h2>Your cart is empty</h2>
                    <p>Add some amazing sneakers to get started!</p>
                    <a href="/products" class="btn btn-primary" style="margin-top: 1rem;">
                        <i class="fas fa-shopping-bag"></i> Start Shopping
                    </a>
                </div>
            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script>
        async function updateQuantity(productId, quantity) {
            try {
                const response = await fetch('/cart/update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId, quantity: parseInt(quantity) })
                });

                const data = await response.json();
                
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.error || 'Failed to update cart');
                }
            } catch (error) {
                console.error('Error updating cart:', error);
                alert('An error occurred while updating the cart');
            }
        }

        async function removeItem(productId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            try {
                const response = await fetch(`/cart/remove/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();
                
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.error || 'Failed to remove item');
                }
            } catch (error) {
                console.error('Error removing item:', error);
                alert('An error occurred while removing the item');
            }
        }
    </script>
</body>
</html>