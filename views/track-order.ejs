<%- include('layout', { body: `
<section class="track-order-page">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header" data-aos="fade-up">
            <h1 class="page-title">Track Your Order</h1>
            <p class="page-subtitle">Order ID: <span class="order-id">#<%= orderId %></span></p>
        </div>
        
        <!-- Order Status -->
        <div class="order-status-section" data-aos="fade-up" data-aos-delay="200">
            <div class="status-timeline">
                <div class="status-step completed">
                    <div class="step-icon">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="step-content">
                        <h3>Order Confirmed</h3>
                        <p>Your order has been confirmed and is being prepared</p>
                        <span class="step-time">2 hours ago</span>
                    </div>
                </div>
                
                <div class="status-step completed">
                    <div class="step-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="step-content">
                        <h3>Processing</h3>
                        <p>Your shoes are being carefully packaged</p>
                        <span class="step-time">1 hour ago</span>
                    </div>
                </div>
                
                <div class="status-step active">
                    <div class="step-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div class="step-content">
                        <h3>In Transit</h3>
                        <p>Your order is on its way to you</p>
                        <span class="step-time">Current</span>
                    </div>
                </div>
                
                <div class="status-step">
                    <div class="step-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="step-content">
                        <h3>Delivered</h3>
                        <p>Your order will be delivered soon</p>
                        <span class="step-time">Estimated: Tomorrow</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Live Map -->
        <div class="map-section" data-aos="fade-up" data-aos-delay="400">
            <h2>Live Tracking</h2>
            <div class="tracking-map">
                <div id="delivery-map" class="delivery-map">
                    <!-- Map will be loaded here -->
                    <div class="map-placeholder">
                        <div class="delivery-truck">
                            <i class="fas fa-truck"></i>
                        </div>
                        <div class="route-line"></div>
                        <div class="delivery-points">
                            <div class="point start">
                                <i class="fas fa-warehouse"></i>
                                <span>Warehouse</span>
                            </div>
                            <div class="point current">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>Current Location</span>
                            </div>
                            <div class="point destination">
                                <i class="fas fa-home"></i>
                                <span>Your Address</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="tracking-info">
                    <div class="info-card">
                        <h3>Estimated Delivery</h3>
                        <p class="delivery-time">Tomorrow, 2:00 PM - 6:00 PM</p>
                    </div>
                    
                    <div class="info-card">
                        <h3>Delivery Address</h3>
                        <p>123 Main Street<br>Apartment 4B<br>New York, NY 10001</p>
                    </div>
                    
                    <div class="info-card">
                        <h3>Carrier</h3>
                        <p>Urban Express Delivery</p>
                        <p class="tracking-number">Tracking: UE123456789</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Order Details -->
        <div class="order-details-section" data-aos="fade-up" data-aos-delay="600">
            <h2>Order Details</h2>
            <div class="order-summary">
                <div class="order-items">
                    <div class="order-item">
                        <div class="item-image">
                            <img src="/images/shoes/urban-runner-pro.jpg" alt="Urban Runner Pro">
                        </div>
                        <div class="item-details">
                            <h3>Urban Runner Pro</h3>
                            <p>Color: Black | Size: 10 US</p>
                            <p class="item-price">$299.00</p>
                        </div>
                        <div class="item-quantity">
                            <span>Qty: 1</span>
                        </div>
                    </div>
                </div>
                
                <div class="order-totals">
                    <div class="total-line">
                        <span>Subtotal:</span>
                        <span>$299.00</span>
                    </div>
                    <div class="total-line">
                        <span>Shipping:</span>
                        <span>Free</span>
                    </div>
                    <div class="total-line">
                        <span>Tax:</span>
                        <span>$23.92</span>
                    </div>
                    <div class="total-line final">
                        <span>Total:</span>
                        <span>$322.92</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Actions -->
        <div class="order-actions" data-aos="fade-up" data-aos-delay="800">
            <button class="btn btn-outline" onclick="window.print()">
                <i class="fas fa-print"></i>
                Print Receipt
            </button>
            <a href="/contact" class="btn btn-secondary">
                <i class="fas fa-headset"></i>
                Contact Support
            </a>
            <a href="/products" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i>
                Continue Shopping
            </a>
        </div>
    </div>
</section>

<style>
.track-order-page {
    padding: var(--spacing-3xl) 0;
    margin-top: 80px;
}

.page-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
}

.order-id {
    color: var(--accent-primary);
    font-weight: 600;
}

.order-status-section {
    margin-bottom: var(--spacing-3xl);
}

.status-timeline {
    display: flex;
    justify-content: space-between;
    position: relative;
    max-width: 800px;
    margin: 0 auto;
}

.status-timeline::before {
    content: '';
    position: absolute;
    top: 30px;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--bg-tertiary);
    z-index: 1;
}

.status-timeline::after {
    content: '';
    position: absolute;
    top: 30px;
    left: 0;
    width: 66%;
    height: 4px;
    background: var(--accent-primary);
    z-index: 2;
    transition: width 1s ease;
}

.status-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 3;
    flex: 1;
}

.step-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--bg-tertiary);
    color: var(--text-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    transition: all var(--transition-normal);
}

.status-step.completed .step-icon {
    background: var(--success);
    color: white;
}

.status-step.active .step-icon {
    background: var(--accent-primary);
    color: white;
    animation: pulse 2s infinite;
}

.step-content h3 {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-xs);
    color: var(--text-primary);
}

.step-content p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xs);
}

.step-time {
    font-size: 0.75rem;
    color: var(--text-muted);
    font-weight: 500;
}

.map-section {
    margin-bottom: var(--spacing-3xl);
}

.map-section h2 {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
}

.tracking-map {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-2xl);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.delivery-map {
    aspect-ratio: 16/10;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    position: relative;
    overflow: hidden;
}

.map-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.delivery-truck {
    font-size: 2rem;
    color: var(--accent-primary);
    animation: truck-move 3s ease-in-out infinite;
    z-index: 3;
}

.route-line {
    position: absolute;
    top: 50%;
    left: 10%;
    right: 10%;
    height: 4px;
    background: linear-gradient(90deg, var(--success) 0%, var(--accent-primary) 60%, var(--text-muted) 100%);
    border-radius: 2px;
}

.delivery-points {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.point {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.75rem;
    color: var(--text-secondary);
}

.point i {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-xs);
}

.point.start {
    top: 30%;
    left: 10%;
    color: var(--success);
}

.point.current {
    top: 40%;
    left: 60%;
    color: var(--accent-primary);
}

.point.destination {
    top: 30%;
    right: 10%;
    color: var(--text-muted);
}

@keyframes truck-move {
    0%, 100% { transform: translateX(-20px); }
    50% { transform: translateX(20px); }
}

.tracking-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
}

.info-card {
    background: var(--bg-primary);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.info-card h3 {
    font-size: 1rem;
    margin-bottom: var(--spacing-sm);
    color: var(--accent-primary);
}

.info-card p {
    margin: 0;
    color: var(--text-secondary);
    line-height: 1.5;
}

.delivery-time {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary) !important;
}

.tracking-number {
    font-family: monospace;
    font-size: 0.875rem;
    color: var(--text-muted) !important;
}

.order-details-section {
    margin-bottom: var(--spacing-3xl);
}

.order-details-section h2 {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
}

.order-summary {
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    max-width: 600px;
    margin: 0 auto;
}

.order-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.item-image {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-md);
    overflow: hidden;
}

.item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.item-details {
    flex: 1;
}

.item-details h3 {
    margin-bottom: var(--spacing-xs);
    font-size: 1.125rem;
}

.item-details p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.item-price {
    font-weight: 600;
    color: var(--accent-primary) !important;
    font-size: 1rem !important;
}

.item-quantity {
    font-weight: 500;
    color: var(--text-secondary);
}

.order-totals {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.total-line {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-sm);
    color: var(--text-secondary);
}

.total-line.final {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-sm);
    margin-top: var(--spacing-sm);
}

.order-actions {
    display: flex;
    gap: var(--spacing-lg);
    justify-content: center;
    flex-wrap: wrap;
}

@media (max-width: 768px) {
    .status-timeline {
        flex-direction: column;
        gap: var(--spacing-xl);
    }
    
    .status-timeline::before,
    .status-timeline::after {
        display: none;
    }
    
    .tracking-map {
        grid-template-columns: 1fr;
    }
    
    .order-item {
        flex-direction: column;
        text-align: center;
    }
    
    .order-actions {
        flex-direction: column;
        align-items: center;
    }
}
</style>
`, pageScript: 'track-order' }) %>